{
	"transform": {
		"^.+\\.(ts|tsx)$": "ts-jest"
	},
	"testEnvironment": "node",
	"moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
	"moduleNameMapper": {
		"^@ts-meta/(.*)$": "<rootDir>/packages/$1/src"
	},
	"testMatch": ["**/*.test.(js|jsx|ts|tsx)"],
	"coverageReporters": ["lcov"]
}
